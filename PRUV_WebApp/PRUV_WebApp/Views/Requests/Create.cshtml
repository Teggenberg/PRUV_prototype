@model PRUV_WebApp.Models.Request


@{
    ViewData["Title"] = "Create";
}



<script src="~/lib/jquery/dist/jquery.min.js"></script>
<h1>Create</h1>

<h4>Request</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RequestYear" class="control-label"></label>
                <input asp-for="RequestYear" class="form-control" />
                <span asp-validation-for="RequestYear" class="text-danger"></span>
            </div>
            
            <label asp-for="RequestBrand" class="control-label">Enter Brand</label>
            
            @Html.DropDownList("RequestBrand", ViewBag.Roles, "Select Brand", new { id="brands", @class="form-control"})
            <div id="result"></div>

            <script type="text/javascript">

                

                $(function () {

                    //On page load, update the visiblity
                    var v = $("#brands").val();
                    UpdateDivVisibility(v);

                    //When user changes the dropdown, update visibility
                    $("#brands").change(function (e) {
                        var v = $("#brands").val();
                        UpdateDivVisibility(v);
                    });

                });

                function UpdateDivVisibility(isVisible) {
                    if (isVisible == "Other") {
                        $("#newBrand").show();
                        //
                        
                    }
                    else {
                       // 
                        $("#newBrand").hide();
                        //$("#newBrand").val($("#brands").val(););
                    }
                }

            </script>
            
            <div class="form-group" id="newBrand">
                <label asp-for="NewBrand" class="control-label">Enter Brand</label>
                <input asp-for="NewBrand" class="form-control" />
                <span asp-validation-for="RequestBrand" class="text-danger"></span>
            </div>




            <div class="form-group">
                <label asp-for="RequestModel" class="control-label"></label>
                <input asp-for="RequestModel" class="form-control" />
                <span asp-validation-for="RequestModel" class="text-danger"></span>
            </div>
            <br>
            <br>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
