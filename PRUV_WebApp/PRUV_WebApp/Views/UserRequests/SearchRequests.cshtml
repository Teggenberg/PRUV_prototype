@model PRUV_WebApp.Models.StoreUser

<h4>Requests made by Employee:</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SearchRequests">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label">Employee ID</label>
                <input asp-for="Id" name="empId" class="form-control" input type="number"/>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <br>

            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}